{
  "name": "mcp-node-stdio-boilerplate",
  "version": "0.1.0",
  "description": "Boilerplate for building MCP servers with Node.js, TypeScript, and stdio transport",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsup --watch --onSuccess \"node dist/index.js\"",
    "build": "tsup",
    "start": "node dist/index.js",
    "typecheck": "tsc",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "ai:sync": "agentlink cursor",
    "ai:doctor": "agentlink doctor"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "stdio",
    "typescript",
    "boilerplate"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.27.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@borasta/agentlink": "^1.0.1",
    "@eslint/js": "^10.0.1",
    "@types/node": "^25.3.2",
    "eslint": "^10.0.2",
    "prettier": "^3.8.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.56.1"
  }
}
